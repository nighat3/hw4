<div class="row">
  <% for post in @entries %>
    <div class="col-sm-6 col-md-3">
      <h4>
        
        <% if post.user%>
          <% if post.user = @current_user%>
          <%= post.user["username"] %>
        <% else %>
          anonymous
        <% end %>
      </h4>
      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
        <h4> No image </h4>
      <% end %>
      <% end %>

        <div class="col text-end">
          <div class="small fst-italic"><%= post["created_at"].strftime("%-m/%d/%y at %-I:%M %p") %></div>
        </div>
      

      <p><%= post["body"] %></p>
    </div>
  <% end %>
</div>



<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>


